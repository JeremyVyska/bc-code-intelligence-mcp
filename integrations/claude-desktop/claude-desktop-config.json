{
  "$schema": "https://schemas.claude.ai/desktop/config.json",
  "name": "BCKB Knowledge Assistant",
  "description": "Business Central Knowledge Base integration with layered knowledge architecture",
  "version": "1.0.0",
  "mcpServers": {
    "bckb": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "BCKB_LOG_LEVEL": "info",
        "BCKB_DEBUG_LAYERS": "false",
        "BCKB_COMPANY_KNOWLEDGE_URL": "https://github.com/example/bc-knowledge",
        "BCKB_CACHE_ENABLED": "true",
        "BCKB_CACHE_TTL_SECONDS": "600"
      },
      "cwd": ".",
      "capabilities": {
        "tools": true,
        "resources": false,
        "prompts": false
      },
      "tags": ["business-central", "knowledge-base", "al", "dynamics365"],
      "description": "Access comprehensive Business Central knowledge with intelligent layering"
    }
  },
  "integrationSettings": {
    "autoStart": true,
    "reconnect": true,
    "maxRetries": 3,
    "timeoutMs": 10000,
    "healthCheckInterval": 30000
  },
  "uiPreferences": {
    "showInSidebar": true,
    "defaultView": "knowledge",
    "enableNotifications": true,
    "theme": "auto"
  },
  "knowledgeIntegration": {
    "contextAware": true,
    "smartRecommendations": true,
    "codeAnalysis": true,
    "layeredSearch": true,
    "maxResults": 10,
    "includeCodeSamples": true
  }
}