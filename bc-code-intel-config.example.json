{
  "$schema": "./src/config/bc-code-intel-config-schema.json",
  "layers": [
    {
      "name": "embedded",
      "priority": 0,
      "source": {
        "type": "embedded"
      },
      "enabled": true
    },
    {
      "name": "project",
      "priority": 100,
      "source": {
        "type": "local",
        "path": "./bc-code-intel-overrides"
      },
      "enabled": true
    }
  ],
  "_example_azure_devops_layer": {
    "_comment": "Example Azure DevOps repository with Azure CLI authentication",
    "name": "azure-devops-knowledge",
    "priority": 30,
    "source": {
      "type": "git",
      "url": "https://dev.azure.com/YourOrg/YourProject/_git/bc-knowledge",
      "branch": "main"
    },
    "auth": {
      "type": "az_cli"
    },
    "enabled": true,
    "cache_duration": "2h"
  },
  "cache": {
    "strategy": "moderate",
    "ttl": {
      "git": "1h",
      "local": "immediate",
      "embedded": "permanent"
    }
  },
  "developer": {
    "debug_layers": false,
    "hot_reload": false,
    "log_level": "info",
    "enable_diagnostic_tools": false
  },
  "_comments": {
    "enable_diagnostic_tools": "Set to true to enable git layer authentication diagnostics (adds 4 MCP tools - only needed for advanced layer users)"
  }
}