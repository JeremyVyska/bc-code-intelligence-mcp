{
  "name": "bckb-knowledge-assistant",
  "displayName": "BCKB Knowledge Assistant",
  "description": "Business Central Knowledge Base integration for Visual Studio Code with AI-powered assistance",
  "version": "1.0.0",
  "publisher": "bckb-team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/bc-knowledgebase-mcp.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Documentation",
    "Snippets",
    "Education"
  ],
  "keywords": [
    "business-central",
    "al",
    "dynamics365",
    "knowledge-base",
    "mcp",
    "ai-assistant"
  ],
  "activationEvents": [
    "onLanguage:al",
    "onCommand:bckb.search",
    "onView:bckb-knowledge",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bckb.search",
        "title": "Search Knowledge Base",
        "category": "BCKB",
        "icon": "$(search)"
      },
      {
        "command": "bckb.analyzeCode",
        "title": "Analyze Current Code",
        "category": "BCKB",
        "icon": "$(microscope)"
      },
      {
        "command": "bckb.getTopic",
        "title": "Get Topic Details",
        "category": "BCKB"
      },
      {
        "command": "bckb.showStatus",
        "title": "Show Server Status",
        "category": "BCKB",
        "icon": "$(pulse)"
      },
      {
        "command": "bckb.refreshKnowledge",
        "title": "Refresh Knowledge Base",
        "category": "BCKB",
        "icon": "$(refresh)"
      },
      {
        "command": "bckb.openTopic",
        "title": "Open Topic",
        "category": "BCKB"
      },
      {
        "command": "bckb.copyTopicId",
        "title": "Copy Topic ID",
        "category": "BCKB"
      },
      {
        "command": "bckb.exportAnalysis",
        "title": "Export Analysis",
        "category": "BCKB"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "bckb-knowledge",
          "name": "BCKB Knowledge",
          "when": "config.bckb.showInExplorer"
        }
      ],
      "bckb-container": [
        {
          "id": "bckb-search-results",
          "name": "Search Results",
          "when": "view == bckb-container"
        },
        {
          "id": "bckb-recommendations",
          "name": "Recommendations",
          "when": "view == bckb-container"
        },
        {
          "id": "bckb-layers",
          "name": "Knowledge Layers",
          "when": "view == bckb-container"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bckb-container",
          "title": "BCKB Knowledge",
          "icon": "$(book)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "bckb.search"
        },
        {
          "command": "bckb.analyzeCode",
          "when": "editorHasSelection"
        },
        {
          "command": "bckb.showStatus"
        },
        {
          "command": "bckb.refreshKnowledge"
        }
      ],
      "editor/context": [
        {
          "command": "bckb.analyzeCode",
          "when": "editorHasSelection && resourceExtname == .al",
          "group": "bckb@1"
        }
      ],
      "view/title": [
        {
          "command": "bckb.refreshKnowledge",
          "when": "view == bckb-knowledge || view == bckb-search-results",
          "group": "navigation"
        },
        {
          "command": "bckb.showStatus",
          "when": "view == bckb-knowledge",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bckb.openTopic",
          "when": "view == bckb-search-results && viewItem == bckb-topic",
          "group": "inline"
        },
        {
          "command": "bckb.copyTopicId",
          "when": "view == bckb-search-results && viewItem == bckb-topic",
          "group": "bckb@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "bckb.search",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k"
      },
      {
        "command": "bckb.analyzeCode",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "BCKB Configuration",
      "properties": {
        "bckb.serverPath": {
          "type": "string",
          "default": "node",
          "description": "Path to BCKB MCP server executable"
        },
        "bckb.serverArgs": {
          "type": "array",
          "default": ["dist/index.js"],
          "description": "Arguments for BCKB MCP server"
        },
        "bckb.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect to BCKB server on startup"
        },
        "bckb.showInExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Show BCKB Knowledge view in Explorer"
        },
        "bckb.enableCodeAnalysis": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code analysis"
        },
        "bckb.analysisOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run code analysis when AL files are saved"
        },
        "bckb.maxSearchResults": {
          "type": "number",
          "default": 20,
          "description": "Maximum number of search results to display"
        },
        "bckb.enableRecommendations": {
          "type": "boolean",
          "default": true,
          "description": "Show topic recommendations based on current context"
        },
        "bckb.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    },
    "languages": [
      {
        "id": "bckb-topic",
        "extensions": [".bckb-topic"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bckb-topic",
        "scopeName": "text.bckb-topic",
        "path": "./syntaxes/bckb-topic.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  }
}